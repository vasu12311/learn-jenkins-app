pipeline {
    agent any

    stages {
        stage('build'){
            agent{
                docker{
                    image 'node:18-alpine'
                }
            }
            steps{
                sh 'echo "with docker"'
                sh 'ls -la'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm run build'
                sh 'ls -la'
            }
        }
    }
}