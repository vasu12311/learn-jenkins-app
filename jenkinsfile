pipeline {
    agent any

    stages {

        stage('AZURE'){
            agent{
                docker{
                    image 'bitnami/azure-cli'
                    args "--entrypoint=''"
                }
            }

            steps{
                sh '''
                   sudo chown -R $USER:$USER $HOME/.azure/
                   az version
                '''   
            }
        }     
    }
}