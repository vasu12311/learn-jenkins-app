pipeline {
    agent any
    environment {
       AZURE_SUBSCRIPTION_ID='827ab5a9-3b99-4a11-8fbe-680310381168'
       AZURE_TENANT_ID='4466279b-366c-47b9-8275-0312e65b42c5'
       AZURE_STORAGE_ACCOUNT='manujenkins'
    }

    stages {

        stage('AZURE'){
            agent{
                docker{
                    image 'bitnami/azure-cli'
                    args "--user root --privileged"
                    args `--entrypoint=''
                }
            }

            steps{
                withCredentials([usernamePassword(credentialsId: 'vasantha', passwordVariable: 'AZURE_CLIENT_SECRET', usernameVariable: 'AZURE_CLIENT_ID')]) {
                    sh '''
                       echo "Hello s3" > index.html
                       az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID
                       az account set --subscription $AZURE_SUBSCRIPTION_ID
                       az storage container create --account-name $AZURE_STORAGE_ACCOUNT --name manu-container --auth-mode login
                    '''  
                }
            }
        }     
    }
}