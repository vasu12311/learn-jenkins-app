pipeline {
    agent any

    stages {

        stage('AZURE'){
            agent{
                docker{
                    image 'bitnami/azure-cli'
                    args "--user root --privileged"
                }
            }

            environment{
                MY_CRED = credentials('my-jenins')
            }

            steps{
                sh '''
                   az group create --name jenkins-get-started-rg --location eastus
                   az version
                '''   
            }
        }     
    }
}