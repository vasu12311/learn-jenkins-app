pipeline {
    agent any

    stages {
        stage('build'){
            agent{
                docker{
                    image 'node:18-alpine'
                }
            }
            steps{
                sh 'echo "with docker"'
                sh 'ls -la'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm ci'
                sh 'npm run build'
                sh 'ls -la'
            }
        }

        stage('Tests') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
                sh '''
                    test -f build/index.html
                    npm test
                '''    
            }
                
            
        }

        stage('deploy'){
            agent{
                docker{
                    image 'node:18-alpine'
                }
            }
            steps{
                sh '''
                  npm install netlify-cli -g
                  netlify --version
                '''  
            } 
        }       
    }
}